<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/fab_margin"
    android:orientation="vertical"
    android:id="@+id/layout_root_page3">

    <ImageView
        android:id="@+id/image_torica"
        android:src="@mipmap/tutorial_torica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="150dp"
        android:contentDescription="@null"/>
    <ImageView
        android:id="@+id/image_hand_goo"
        android:src="@mipmap/tutorial_hand_goo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:contentDescription="@null"/>

    <TextView
        android:id="@+id/tutorial_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tutorial_message_3"
        android:gravity="center"
        android:textSize="@dimen/test_size_medium"/>

</FrameLayout>
